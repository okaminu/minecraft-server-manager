<%= form_tag({controller: 'control_panel', action: 'save', method: 'post'}, {class: 'form form-horizontal highlight col-md-5 col-sm-6 col-xs-6'}) do %>
    <h3>Settings</h3>
    <% @properties_view.each do |propertyKey, propertyValue| %>
        <div class="form-group">
          <%= label_tag propertyKey, nil, class: 'col-md-4 control-label col-sm-4 col-xs-4' %>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <%= text_field_tag propertyKey, propertyValue, class: 'form-control' %>
          </div>
        </div>
    <% end %>
    <div class="form-group">
      <div class="col-md-1 col-md-offset-4 col-sm-1 col-sm-offset-4 col-xs-1 col-xs-offset-4">
        <%= submit_tag 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>