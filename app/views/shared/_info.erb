<div class="form-inline highlight col-md-5 col-sm-6 col-xs-6">
  <h3>Information</h3>

  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3 control-label"><strong>Name:</strong></div>
    <div class="col-md-4 col-sm-4 col-xs-4"><%= @server_info[:motd] %></div>
  </div>
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3"><strong>Status:</strong></div>
    <div class="col-md-2 col-sm-2 col-xs-2 text-success">Running</div>
  </div>
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3"><strong>Version:</strong></div>
    <div class="col-md-2 col-sm-2 col-xs-2">1.8.1</div>
  </div>
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3"><strong>Logo:</strong></div>
    <div class="col-md-2 col-sm-2 col-xs-2"><%= image_tag 'server-icon.png' %></div>
  </div>
</div>